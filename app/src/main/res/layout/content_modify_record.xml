<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:showIn="com.phoenix.budget.DashboardActivity">

    <data>

        <import type="com.phoenix.budget.utils.StringUtils" />

        <variable
            name="categorizedRecord"
            type="com.phoenix.budget.model.CategorizedRecord" />

        <variable
            name="viewModel"
            type="com.phoenix.budget.model.viewmodel.ModifyRecordViewModel" />
    </data>

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="?attr/actionBarSize">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editTitle"
                android:layout_width="match_parent"
                android:layout_height="@dimen/modify_height"
                android:background="@null"
                android:drawableLeft="@drawable/new_entry"
                android:drawablePadding="@dimen/icon_padding"
                android:drawableStart="@drawable/new_entry"
                android:drawableTint="@android:color/darker_gray"
                android:hint="@string/hint_label"
                android:padding="@dimen/record_padding"
                android:text="@{categorizedRecord.title}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_width"
                android:background="@color/color_border" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editAmount"
                android:layout_width="match_parent"
                android:layout_height="@dimen/modify_height"
                android:background="@null"
                android:drawableLeft="@drawable/dollar"
                android:drawablePadding="@dimen/icon_padding"
                android:drawableTint="@android:color/darker_gray"
                android:hint="@string/hint_amount"
                android:inputType="numberDecimal"
                android:lines="1"
                android:maxLength="10"
                android:padding="@dimen/record_padding"
                android:singleLine="true"
                android:text="@{StringUtils.getValidCurrencyString(categorizedRecord.amount)}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_width"
                android:background="@color/color_border" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txtPickDate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/modify_height"
                android:background="@null"
                android:drawableEnd="@drawable/dial_pad"
                android:drawableLeft="@drawable/time"
                android:drawablePadding="@dimen/icon_padding"
                android:drawableRight="@drawable/dial_pad"
                android:drawableStart="@drawable/time"
                android:drawableTint="@android:color/darker_gray"
                android:gravity="center_vertical"
                android:padding="@dimen/record_padding"
                android:text="@{categorizedRecord.title}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_width"
                android:background="@color/color_border" />

            <com.phoenix.budget.view.CategoryView
                android:id="@+id/categoryView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="@{viewModel.isRecurring}">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/border_width"
                    android:background="@color/color_border" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/record_padding"
                        android:src="@drawable/check_ok"
                        android:tint="@android:color/darker_gray" />

                    <Spinner
                        android:id="@+id/repeatTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/modify_height"
                        android:drawableLeft="@drawable/check_ok"
                        android:drawableStart="@drawable/check_ok"
                        android:gravity="end|right"
                        bind:selectedPosition="@{categorizedRecord.recurringRecord.frequency}" />
                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/border_width"
                    android:background="@color/color_border" />

                <android.support.v7.widget.SwitchCompat
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/modify_height"
                    android:drawableLeft="@drawable/check_ok"
                    android:drawablePadding="@dimen/icon_padding"
                    android:drawableStart="@drawable/check_ok"
                    android:drawableTint="@android:color/darker_gray"
                    android:padding="@dimen/record_padding"
                    android:text="@string/required_approval" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_width"
                android:background="@color/color_border" />

            <android.support.v7.widget.AppCompatEditText
                android:id="@+id/editNote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:drawableLeft="@drawable/note"
                android:drawablePadding="@dimen/icon_padding"
                android:drawableStart="@drawable/note"
                android:drawableTint="@android:color/darker_gray"
                android:gravity="top|left|start"
                android:hint="@string/hint_notes"
                android:lines="3"
                android:maxLines="3"
                android:padding="@dimen/record_padding"
                android:text="@{categorizedRecord.note}" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/border_width"
                android:background="@color/color_border" />

        </LinearLayout>
    </ScrollView>
</layout>
